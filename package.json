{
  "name": "test-webhook",
  "version": "1.2.0",
  "description": "High-performance webhook ingestion and management system built on Cloudflare Workers",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "npm run setup:admin && npm run setup:webhook",
    "setup:admin": "cd admin && npm install",
    "setup:webhook": "cd webhook-worker && cargo build",
    "dev": "node scripts/dev.js",
    "dev:remote": "node scripts/dev.js --remote",
    "deploy": "node scripts/deploy.js",
    "deploy:admin": "node scripts/deploy.js admin",
    "deploy:webhook": "node scripts/deploy.js webhook",
    "deploy:skip-migrations": "node scripts/deploy.js --skip-migrations",
    "db:generate": "cd admin && npm run db:generate",
    "db:migrate": "cd admin && npm run db:migrate",
    "db:migrate:prod": "cd admin && wrangler d1 migrations apply webhook-db --remote",
    "db:studio": "cd admin && npm run db:studio",
    "db:seed": "cd admin && npm run db:seed",
    "type-check": "cd admin && npm run type-check",
    "lint": "cd admin && npm run lint",
    "lint:fix": "cd admin && npm run lint:fix",
    "load-test": "cd scripts && ./run-load-test.sh medium",
    "load-test:light": "cd scripts && ./run-load-test.sh light",
    "load-test:medium": "cd scripts && ./run-load-test.sh medium",
    "load-test:heavy": "cd scripts && ./run-load-test.sh heavy",
    "load-test:extreme": "cd scripts && ./run-load-test.sh extreme",
    "load-test:stress": "cd scripts && ./run-load-test.sh stress",
    "load-test:local": "export USE_LOCAL_DB=true && cd scripts && ./run-load-test.sh medium",
    "load-test:local:light": "export USE_LOCAL_DB=true && cd scripts && ./run-load-test.sh light"
  },
  "keywords": [
    "webhook",
    "cloudflare",
    "workers",
    "rust",
    "hono",
    "react"
  ],
  "author": "Eri <eri@redshoes.pro>",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^4.47.0"
  }
}
