{
  "name": "webhook-admin",
  "version": "0.3.0",
  "description": "Webhook system admin panel built with Hono and React",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --port 5173 --local --persist-to ../.wrangler-shared",
    "build": "npm run build:css && npm run build:client && wrangler deploy",
    "deploy": "npm run build",
    "build:css": "postcss src/styles/globals.css -o dist/styles.css",
    "build:css:watch": "postcss src/styles/globals.css -o dist/styles.css --watch",
    "build:client": "node esbuild.config.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply webhook-db --local --persist-to ../.wrangler-shared",
    "db:reset": "wrangler dev scripts/reset-db.ts --local --test-scheduled --persist-to ../.wrangler-shared",
    "db:studio": "drizzle-kit studio",
    "db:seed": "wrangler dev scripts/seed.ts --local --test-scheduled --persist-to ../.wrangler-shared"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@hono/react-renderer": "^0.3.0",
    "@hono/zod-validator": "^0.7.2",
    "@radix-ui/react-slot": "^1.2.0",
    "@tabler/icons-react": "^3.35.0",
    "@tailwindcss/postcss": "^4.1.13",
    "better-auth": "^1.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.38.3",
    "highlight.js": "^11.11.1",
    "hono": "^4.9.4",
    "react": "^19.1.1",
    "react-day-picker": "^9.11.1",
    "react-dom": "^19.1.1",
    "react-email": "^3.0.1",
    "react-super-responsive-table": "^6.0.2",
    "resend": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250823.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.30.3",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.3",
    "wrangler": "^4.45.0"
  }
}
